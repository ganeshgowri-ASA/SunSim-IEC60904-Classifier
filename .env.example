# SunSim-IEC60904-Classifier Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION (Optional - app works without database)
# =============================================================================

# Option 1: Full DATABASE_URL (Railway provides this automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Individual connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sunsim
# DB_USER=postgres
# DB_PASSWORD=your_password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
APP_NAME=SunSim-IEC60904-Classifier

# Application version
APP_VERSION=1.0.0

# Debug mode (set to 'true' for development)
DEBUG=false

# IEC standard version
IEC_STANDARD_VERSION=Ed.3

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable database features (set to 'false' to run without database)
ENABLE_DATABASE=true

# Enable report generation
ENABLE_REPORTS=true

# Enable SPC/MSA quality control features
ENABLE_SPC=true

# =============================================================================
# RAILWAY DEPLOYMENT (Set automatically by Railway)
# =============================================================================

# PORT=8501
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=sunsim-classifier
